{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/main",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}